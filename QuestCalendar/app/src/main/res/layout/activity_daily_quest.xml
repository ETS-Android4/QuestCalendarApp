<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyQuestActivity"
    android:background="#9EF6B7"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/daily_quest_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="DAILY QUEST"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Title"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/title_daily_quest_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="TITLE DAILY QUEST"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Description"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/description_daily_quest_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="DESCRIPTION DAILY QUEST THIS IS A TEST DESCRIPTION HELLO MUM"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Type"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/type_daily_quest_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="TYPE DAILY QUEST"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <CheckBox
            android:id="@+id/done_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:fontFamily="@font/bungee"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:id="@+id/back_button_quest"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#000"
            android:fontFamily="@font/roboto"
            android:text="GO BACK"
            android:textColor="#FFF"/>
    </LinearLayout>


</LinearLayout>